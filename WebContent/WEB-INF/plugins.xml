<?xml version="1.0" encoding="UTF-8"?>
<plugins>
	<!-- Optional attributes "delay", "period", "unit" disabled -->
	<plugin
		class="com.shadowolf.plugins.scheduled.UserStatsUpdater"
		table="users_main"
		down_column="Downloaded"
		up_column="Uploaded"
		passkey_column="torrent_pass"
		unit="minutes"
		period="15"
		delay="0"
	/>	
	
	<plugin
		class="com.shadowolf.plugins.scheduled.PeerCountsUpdater"
		table="torrents"
		seeder_column="seeders"
		leecher_column="leechers"
		info_hash_column="info_hash"
		unit="seconds"
		period="15"
		delay="0"
	/>	
	
	<plugin
		class="com.shadowolf.plugins.scheduled.InfoHashEnforcer"
		table="torrents"
		info_hash_column="info_hash"
		unit="seconds"
		period="15"
		delay="0"
	/>
	
	<plugin
		class="com.shadowolf.plugins.scheduled.PasskeyEnforcer"
		table="users_main"
		passkey_column="torrent_pass"
		unit="minutes"
		period="15"
		delay="0"
	/>
	
	<plugin
		class="com.shadowolf.plugins.scheduled.Whitelist"
		table="xbt_client_whitelist"
		peer_id_column="peer_id"
		unit="minutes"
		period="15"
		delay="0"
	/>
	
	<plugin
		class="com.shadowolf.plugins.scheduled.Cleanup"
		unit="minutes"
		period="15"
		delay="0"
	/>
	
	<plugin
		class="com.shadowolf.plugins.scheduled.freeleech.Simple"
		table="torrents"
		info_hash_column="info_hash"
		torrent_freeleech_flag="freetorrent"
	/>
	
	<plugin
		class="com.shadowolf.plugins.scheduled.SnatchList"
		unit="seconds"
		period="5"
		
		torrent_id_column="ID"
		info_hash_column="info_hash"
		torrent_table="torrents"
		
		passkey_column="torrent_pass"
		user_id_column="ID"
		user_table="users_main"
		
		snatch_table="xbt_snatched"
		snatch_user_id="uid"
		snatch_torrent_id="fid"
		snatch_timestamp_column="tstamp"
	/>
</plugins>
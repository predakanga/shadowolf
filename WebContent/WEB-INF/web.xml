<?xml version="1.0" encoding="UTF-8"?>
<web-app
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	 xmlns="http://java.sun.com/xml/ns/javaee" 
	 xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	 id="WebApp_ID" 
	 version="2.5">

  <display-name>SW Major Refactor</display-name>
  <listener>
  	<listener-class>com.shadowolf.core.application.LifeCycle</listener-class>
  </listener>
  <filter>
		<filter-name>UrlRewriter</filter-name>
		<filter-class>com.shadowolf.util.UrlRewriter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UrlRewriter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
  <servlet>
    	<servlet-name>AnnounceServlet</servlet-name>
    	<servlet-class>com.shadowolf.web.AnnounceServlet</servlet-class>
    	<!-- <description>AnnounceServlet</description>
    	<display-name>AnnounceServlet</display-name> -->
	</servlet>
	<servlet-mapping>
		<servlet-name>AnnounceServlet</servlet-name>
		<url-pattern>/Announce</url-pattern>
		<url-pattern>/announce</url-pattern>
	</servlet-mapping>
</web-app>